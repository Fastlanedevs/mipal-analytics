# MIPAL Analytics Frontend Environment Configuration
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# API CONFIGURATION (Required)
# =============================================================================

# Frontend application URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Backend API URL (use 127.0.0.1 for local development to avoid CORS issues)
NEXT_PUBLIC_BACKEND_URL=http://127.0.0.1:8000

# Alternative API URL format (if needed by some components)
NEXT_PUBLIC_API_URL=http://localhost:8000

# =============================================================================
# AUTHENTICATION (Required)
# =============================================================================

# NextAuth.js configuration
NEXTAUTH_URL=http://localhost:3000

# NextAuth secret for JWT signing (minimum 32 characters)
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="WgQ/cl+/qj8p11dlJOqAuNv7MpLTGPRLkJKfXEg1c6w="

# =============================================================================
# OPTIONAL ANALYTICS & MONITORING
# =============================================================================

# PostHog analytics (optional)
# Get your key from: https://app.posthog.com/project/settings
NEXT_PUBLIC_POSTHOG_KEY=phc_your_posthog_project_key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Sentry error tracking (optional)
# Get your DSN from: https://sentry.io/settings/projects/
SENTRY_DSN=https://your_sentry_dsn_url

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Environment indicator
NEXT_PUBLIC_ENVIRONMENT=development

# Enable debug mode for development
NEXT_PUBLIC_DEBUG=true

# =============================================================================
# FEATURE FLAGS (Optional)
# =============================================================================

# Enable/disable specific features
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_CHAT=true
NEXT_PUBLIC_ENABLE_CODE_EXECUTION=true

# =============================================================================
# EXTERNAL INTEGRATIONS (Optional)
# =============================================================================

# Google Analytics (if different from PostHog)
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Intercom for customer support (optional)
NEXT_PUBLIC_INTERCOM_APP_ID=your_intercom_app_id